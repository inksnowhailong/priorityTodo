{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "prioritytodo",
  "version": "0.1.0",
  "identifier": "com.prioritytodo.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "prioritytodo",
        "width": 800,
        "height": 600,
        "decorations": true
      },{
        "label": "dialog",
        "url":"/dialog",
        "width": 0,
        "height": 0,
        "decorations":true,
        "alwaysOnTop": true,
        "resizable": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
